
<% if notice %>
<p id="notice" ><%= notice %></p>
<% end %>
<h1>Your Pragmatic Catalog</h1>
<p> You have visited this page <%= pluralize(@count, 'time') %></p>

<% @products.each do |product| %>
<div class="entry" >
<!--
<%= image_tag(product.img_url) %>
<%= image_tag(product.img_url) %> -->
<%= link_to(image_tag(product.img_url), line_items_path(product_id: product), html_options = {method: :post}) %>
<h3><%= product.title %></h3>
<%= sanitize(product.description) %>
<div class="price_line" >
<span class="price" ><%= number_to_currency(product.price, unit: "Rs. " )%></span>
<%= button_to 'Add to Cart', line_items_path(product_id: product) %>
</div>
</div>
<% end %>
